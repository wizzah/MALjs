{
  "manifest_version": 2,

  "name": "MAL Anime Add Helper",
  "description": "This extension helps you add anime to your MAL list easier.",
  "version": "1.0",

  "background": {
    "scripts": ["add.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "favicon.jpg",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*.anichart.net/*",
    "http://*.myanimelist.net/*"
  ]
}